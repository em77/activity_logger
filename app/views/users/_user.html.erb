<td>
  <%= link_to user.email, user %>
</td>
<td>
  <%= form_for(user) do |f| %>
    <div class="form-group">
      <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, {},
        class: "form-control") %>
    </div>
    <td>
    <%= f.submit "Change Role", class: "btn btn-default btn-primary" %>
    </td>
  <% end %>
</td>
<td>
  <div class="btn-group">
    <%= link_to("Delete user", user_path(user),\
      data: { :confirm => "Are you sure?" }, method: :delete,\
      class: "btn btn-danger") unless user == current_user %>
  </div>
</td>
